extends layout
block head
	link(rel='stylesheet', href='/index/css/index.css')
block content
	.container
		.loginContainer.contentContainer
			h2 Enter your name
			input.loginInput(type='text', name='login', autofocus='autofocus' maxlength=17, autocomplete='off')
